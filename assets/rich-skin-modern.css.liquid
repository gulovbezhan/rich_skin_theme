/* ============================================================
   RICH SKIN - 2026 MODERN DESIGN SYSTEM
   Luxury Beauty & Wellness Store
   ============================================================ */

/* ---------- CSS Custom Properties ---------- */
:root {
  --rs-rose: #f1b4ae;
  --rs-rose-light: #fbe8e5;
  --rs-rose-lighter: #fdf4f3;
  --rs-rose-dark: #d4908a;
  --rs-cream: #faf8f6;
  --rs-warm-white: #fefdfb;
  --rs-charcoal: #1a1a1a;
  --rs-dark: #0d0d0d;
  --rs-gray-900: #212121;
  --rs-gray-700: #4a4a4a;
  --rs-gray-500: #787878;
  --rs-gray-300: #c4c4c4;
  --rs-gray-100: #f0efed;
  --rs-gold: #c9a96e;
  --rs-gold-light: #e8d5b0;
  --rs-shadow-sm: 0 1px 3px rgba(0,0,0,0.04), 0 1px 2px rgba(0,0,0,0.06);
  --rs-shadow-md: 0 4px 16px rgba(0,0,0,0.06), 0 2px 4px rgba(0,0,0,0.04);
  --rs-shadow-lg: 0 12px 40px rgba(0,0,0,0.08), 0 4px 12px rgba(0,0,0,0.04);
  --rs-shadow-xl: 0 20px 60px rgba(0,0,0,0.10), 0 8px 20px rgba(0,0,0,0.06);
  --rs-radius-sm: 6px;
  --rs-radius-md: 12px;
  --rs-radius-lg: 20px;
  --rs-radius-xl: 32px;
  --rs-transition: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --rs-transition-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
  --rs-spacing-section: 100px;
  --rs-max-width: 1400px;
}

@media only screen and (max-width: 768px) {
  :root {
    --rs-spacing-section: 60px;
  }
}

/* ---------- Global Base Overrides ---------- */
body {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: var(--rs-warm-white);
  letter-spacing: 0.01em;
}

.page-width {
  max-width: var(--rs-max-width);
}

/* Smoother transitions everywhere */
a, button, .btn, input, textarea, select,
.grid-product, .grid-product__content,
.grid-product__image-mask, .site-nav__link {
  transition: all 0.35s var(--rs-transition);
}

/* ---------- Modern Typography ---------- */
h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4 {
  letter-spacing: -0.01em;
  line-height: 1.1;
}

h2, .h2, .section-header__title {
  font-size: 2.4em;
  letter-spacing: -0.02em;
}

@media only screen and (max-width: 768px) {
  h2, .h2, .section-header__title {
    font-size: 1.8em;
  }
}

.section-header {
  margin-bottom: 50px;
}

.section-header__title {
  position: relative;
  display: inline-block;
}

/* Refined subheading style */
.subheading {
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-size: 0.75em;
  color: var(--rs-rose-dark);
  font-weight: 600;
}

/* ---------- Modern Button Styles ---------- */
.btn,
.btn--secondary {
  border-radius: var(--rs-radius-sm) !important;
  padding: 14px 36px;
  font-size: 13px;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  font-weight: 600;
  transition: all 0.4s var(--rs-transition);
  position: relative;
  overflow: hidden;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--rs-shadow-md);
}

.btn:active {
  transform: translateY(0);
}

.btn:before,
.btn:after {
  border-radius: var(--rs-radius-sm) !important;
}

/* Outline button variant */
.btn--outline {
  background: transparent;
  border: 1.5px solid var(--rs-charcoal);
  color: var(--rs-charcoal);
}

.btn--outline:hover {
  background: var(--rs-charcoal);
  color: #fff;
}

/* ---------- Modern Header & Navigation ---------- */
.site-header {
  transition: all 0.4s var(--rs-transition);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  background: rgba(255,255,255,0.92) !important;
  border-bottom: 1px solid rgba(0,0,0,0.04);
}

.header-wrapper--sticky .site-header {
  box-shadow: 0 1px 20px rgba(0,0,0,0.05) !important;
}

.site-nav__link {
  position: relative;
  padding: 8px 16px !important;
  font-weight: 500;
}

.site-nav__link:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--rs-rose);
  transition: all 0.35s var(--rs-transition);
  transform: translateX(-50%);
}

.site-nav__link:hover:after,
.site-nav__link--active:after {
  width: 60%;
}

/* Modern Mega Menu */
.site-nav__dropdown {
  border-radius: 0 0 var(--rs-radius-md) var(--rs-radius-md);
  box-shadow: var(--rs-shadow-xl);
  border: none;
  border-top: 2px solid var(--rs-rose);
  animation: megaMenuFade 0.3s var(--rs-transition);
  background: #fff;
}

@keyframes megaMenuFade {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.site-nav__dropdown-link {
  padding: 8px 20px;
  font-size: 14px;
  transition: all 0.2s ease;
}

.site-nav__dropdown-link:hover {
  color: var(--rs-rose-dark);
  padding-left: 24px;
}

.megamenu {
  padding: 40px;
}

.megamenu__colection-image {
  border-radius: var(--rs-radius-md);
  overflow: hidden;
  box-shadow: var(--rs-shadow-md);
  transition: all 0.4s var(--rs-transition);
}

.megamenu__colection-image:hover {
  transform: scale(1.02);
  box-shadow: var(--rs-shadow-lg);
}

/* ---------- Announcement Bar Modern ---------- */
.announcement-bar {
  font-size: 12px;
  letter-spacing: 0.12em;
  font-weight: 500;
}

/* ---------- Modern Hero/Slideshow ---------- */
.hero {
  position: relative;
}

.hero__title {
  letter-spacing: -0.03em;
  line-height: 1.05;
  font-weight: 700;
}

.hero__subtitle {
  font-size: 1.1em;
  letter-spacing: 0.04em;
  opacity: 0.9;
}

.hero__link .btn {
  padding: 16px 48px;
  font-size: 12px;
  letter-spacing: 0.2em;
  border-radius: var(--rs-radius-sm) !important;
  backdrop-filter: blur(10px);
}

.hero__text-shadow {
  text-shadow: none;
}

.hero__text-content {
  text-shadow: 0 2px 20px rgba(0,0,0,0.15);
}

/* Slideshow progress bars */
.flickity-page-dots {
  bottom: 30px;
}

.flickity-page-dots .dot {
  border-radius: 3px;
  height: 4px;
  opacity: 0.4;
  transition: all 0.3s ease;
}

.flickity-page-dots .dot.is-selected {
  opacity: 1;
}

/* ---------- Index Sections Spacing ---------- */
.index-section {
  padding-top: var(--rs-spacing-section);
  padding-bottom: var(--rs-spacing-section);
}

/* ---------- Modern Product Cards ---------- */
.grid-product__content {
  border-radius: var(--rs-radius-md);
  overflow: hidden;
  background: #fff;
  transition: all 0.4s var(--rs-transition);
}

.grid-product:hover .grid-product__content {
  box-shadow: var(--rs-shadow-lg);
  transform: translateY(-6px);
}

.grid-product__image-mask {
  border-radius: var(--rs-radius-md) var(--rs-radius-md) 0 0;
  overflow: hidden;
}

.grid-product__image-mask img {
  transition: transform 0.6s var(--rs-transition);
}

.grid-product:hover .grid-product__image-mask img {
  transform: scale(1.06);
}

.grid-product__meta {
  padding: 16px 12px;
}

.grid-product__title {
  font-size: 14px;
  font-weight: 500;
  letter-spacing: 0.01em;
  line-height: 1.4;
}

.grid-product__price {
  font-weight: 600;
  color: var(--rs-gray-700);
  margin-top: 6px;
}

/* Quick add button on hover */
.grid-product__btn {
  border-radius: var(--rs-radius-sm);
  opacity: 0;
  transform: translateY(10px);
  transition: all 0.35s var(--rs-transition);
}

.grid-product:hover .grid-product__btn {
  opacity: 1;
  transform: translateY(0);
}

/* ---------- Trust Badges / Icon Row ---------- */
.text-columns-wrapper .grid__item {
  padding: 30px 20px;
}

.text-columns-wrapper h3 {
  font-size: 13px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-weight: 600;
  margin-top: 16px;
}

/* ---------- Category Showcase Section ---------- */
.rs-categories {
  padding: var(--rs-spacing-section) 0;
  background: var(--rs-warm-white);
}

.rs-categories__header {
  text-align: center;
  margin-bottom: 60px;
}

.rs-categories__label {
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 11px;
  color: var(--rs-rose-dark);
  font-weight: 600;
  margin-bottom: 16px;
  display: block;
}

.rs-categories__title {
  font-size: 2.8em;
  letter-spacing: -0.03em;
  color: var(--rs-charcoal);
  margin: 0 0 12px;
  line-height: 1.1;
}

.rs-categories__subtitle {
  font-size: 1.1em;
  color: var(--rs-gray-500);
  max-width: 500px;
  margin: 0 auto;
}

@media only screen and (max-width: 768px) {
  .rs-categories__title {
    font-size: 2em;
  }
}

.rs-categories__grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16px;
  max-width: var(--rs-max-width);
  margin: 0 auto;
  padding: 0 30px;
}

@media only screen and (max-width: 1100px) {
  .rs-categories__grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media only screen and (max-width: 900px) {
  .rs-categories__grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    padding: 0 20px;
  }
}

@media only screen and (max-width: 600px) {
  .rs-categories__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 0 15px;
  }
}

.rs-category-tile {
  position: relative;
  border-radius: var(--rs-radius-md);
  overflow: hidden;
  aspect-ratio: 1;
  cursor: pointer;
  text-decoration: none;
  display: block;
}

.rs-category-tile__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s var(--rs-transition);
}

.rs-category-tile__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rs-category-tile:hover .rs-category-tile__image,
.rs-category-tile:hover .rs-category-tile__placeholder {
  transform: scale(1.08);
}

.rs-category-tile__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, transparent 30%, rgba(0,0,0,0.55) 100%);
  transition: all 0.4s var(--rs-transition);
  z-index: 2;
}

.rs-category-tile:hover .rs-category-tile__overlay {
  background: linear-gradient(180deg, transparent 20%, rgba(0,0,0,0.65) 100%);
}

.rs-category-tile__content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24px 20px;
  z-index: 3;
  color: #fff;
  transform: translateY(8px);
  transition: all 0.4s var(--rs-transition);
}

.rs-category-tile:hover .rs-category-tile__content {
  transform: translateY(0);
}

.rs-category-tile__name {
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.02em;
  margin: 0 0 4px;
  text-shadow: 0 1px 8px rgba(0,0,0,0.3);
}

.rs-category-tile__cta {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  opacity: 0;
  transform: translateY(8px);
  transition: all 0.35s var(--rs-transition);
  color: var(--rs-rose-light);
}

.rs-category-tile:hover .rs-category-tile__cta {
  opacity: 1;
  transform: translateY(0);
}

@media only screen and (max-width: 600px) {
  .rs-category-tile__content {
    padding: 16px 14px;
  }
  .rs-category-tile__name {
    font-size: 13px;
  }
}

/* Feature tile (larger) */
.rs-category-tile--featured {
  grid-column: span 2;
  grid-row: span 2;
}

@media only screen and (max-width: 600px) {
  .rs-category-tile--featured {
    grid-column: span 2;
    grid-row: span 1;
    aspect-ratio: 2/1;
  }
}

/* ---------- Brand Editorial Section ---------- */
.rs-editorial {
  padding: 120px 0;
  background: var(--rs-cream);
  overflow: hidden;
}

.rs-editorial__inner {
  max-width: var(--rs-max-width);
  margin: 0 auto;
  padding: 0 30px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: center;
}

@media only screen and (max-width: 900px) {
  .rs-editorial {
    padding: 80px 0;
  }
  .rs-editorial__inner {
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 0 20px;
  }
}

.rs-editorial__image-wrap {
  position: relative;
  border-radius: var(--rs-radius-lg);
  overflow: hidden;
  box-shadow: var(--rs-shadow-xl);
}

.rs-editorial__image-wrap img,
.rs-editorial__image-wrap .placeholder-svg {
  width: 100%;
  display: block;
}

.rs-editorial__image-accent {
  position: absolute;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: var(--rs-rose);
  opacity: 0.15;
  top: -40px;
  right: -40px;
  z-index: 0;
}

.rs-editorial__label {
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 11px;
  color: var(--rs-rose-dark);
  font-weight: 600;
  margin-bottom: 20px;
  display: block;
}

.rs-editorial__title {
  font-size: 2.6em;
  letter-spacing: -0.03em;
  color: var(--rs-charcoal);
  margin: 0 0 24px;
  line-height: 1.1;
}

@media only screen and (max-width: 768px) {
  .rs-editorial__title {
    font-size: 2em;
  }
}

.rs-editorial__text {
  font-size: 1.05em;
  line-height: 1.8;
  color: var(--rs-gray-700);
  margin-bottom: 32px;
}

.rs-editorial__features {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 40px;
}

@media only screen and (max-width: 480px) {
  .rs-editorial__features {
    grid-template-columns: 1fr;
  }
}

.rs-editorial__feature {
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

.rs-editorial__feature-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  background: var(--rs-rose-light);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rs-editorial__feature-icon svg {
  width: 18px;
  height: 18px;
  stroke: var(--rs-rose-dark);
  fill: none;
  stroke-width: 2;
  stroke-linecap: round;
  stroke-linejoin: round;
}

.rs-editorial__feature-text {
  font-size: 13px;
  font-weight: 500;
  color: var(--rs-gray-700);
  line-height: 1.3;
  padding-top: 10px;
}

/* ---------- Featured Categories Row ---------- */
.rs-featured-cats {
  padding: var(--rs-spacing-section) 0;
  background: #fff;
}

.rs-featured-cats__header {
  text-align: center;
  margin-bottom: 50px;
}

.rs-featured-cats__label {
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 11px;
  color: var(--rs-rose-dark);
  font-weight: 600;
  margin-bottom: 16px;
  display: block;
}

.rs-featured-cats__title {
  font-size: 2.4em;
  letter-spacing: -0.02em;
  color: var(--rs-charcoal);
  margin: 0;
  line-height: 1.1;
}

.rs-featured-cats__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24px;
  max-width: var(--rs-max-width);
  margin: 0 auto;
  padding: 0 30px;
}

@media only screen and (max-width: 1000px) {
  .rs-featured-cats__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
}

@media only screen and (max-width: 600px) {
  .rs-featured-cats__grid {
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 0 20px;
  }
}

.rs-featured-cat {
  position: relative;
  border-radius: var(--rs-radius-lg);
  overflow: hidden;
  aspect-ratio: 3/4;
  text-decoration: none;
  display: block;
  box-shadow: var(--rs-shadow-md);
  transition: all 0.5s var(--rs-transition);
}

.rs-featured-cat:hover {
  box-shadow: var(--rs-shadow-xl);
  transform: translateY(-8px);
}

.rs-featured-cat__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.7s var(--rs-transition);
}

.rs-featured-cat:hover .rs-featured-cat__image,
.rs-featured-cat:hover .rs-featured-cat__placeholder {
  transform: scale(1.06);
}

.rs-featured-cat__placeholder {
  width: 100%;
  height: 100%;
  transition: transform 0.7s var(--rs-transition);
}

.rs-featured-cat__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, transparent 40%, rgba(0,0,0,0.6) 100%);
  z-index: 2;
}

.rs-featured-cat__content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32px 28px;
  z-index: 3;
  color: #fff;
}

.rs-featured-cat__label-tag {
  display: inline-block;
  padding: 5px 14px;
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 600;
  margin-bottom: 12px;
  border: 1px solid rgba(255,255,255,0.2);
}

.rs-featured-cat__name {
  font-size: 24px;
  font-weight: 700;
  letter-spacing: -0.01em;
  margin: 0 0 6px;
  text-shadow: 0 2px 12px rgba(0,0,0,0.3);
}

.rs-featured-cat__desc {
  font-size: 13px;
  opacity: 0.85;
  line-height: 1.5;
  margin: 0 0 16px;
}

.rs-featured-cat__link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 600;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.rs-featured-cat__link svg {
  width: 16px;
  height: 16px;
  transition: transform 0.3s ease;
}

.rs-featured-cat:hover .rs-featured-cat__link svg {
  transform: translateX(4px);
}

/* ---------- Marquee / Scrolling Text ---------- */
.rs-marquee {
  overflow: hidden;
  padding: 20px 0;
  background: var(--rs-charcoal);
  white-space: nowrap;
}

.rs-marquee__inner {
  display: inline-flex;
  animation: marqueeScroll 30s linear infinite;
}

.rs-marquee__item {
  display: inline-flex;
  align-items: center;
  gap: 32px;
  padding: 0 32px;
  color: #fff;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-weight: 500;
}

.rs-marquee__item span.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: var(--rs-rose);
  display: inline-block;
}

@keyframes marqueeScroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* ---------- Modern Testimonials ---------- */
.testimonials-section {
  background: var(--rs-cream);
}

.testimonial-slide {
  border-radius: var(--rs-radius-md);
  background: #fff;
  box-shadow: var(--rs-shadow-sm);
  padding: 40px;
  transition: all 0.4s var(--rs-transition);
}

.testimonial-slide:hover {
  box-shadow: var(--rs-shadow-md);
}

.testimonial__author-image {
  border-radius: 50%;
  box-shadow: var(--rs-shadow-sm);
  border: 3px solid var(--rs-rose-light);
}

/* ---------- Newsletter Section ---------- */
.rs-newsletter {
  padding: 100px 0;
  background: linear-gradient(135deg, var(--rs-rose-lighter) 0%, var(--rs-cream) 50%, #fff 100%);
  text-align: center;
}

.rs-newsletter__inner {
  max-width: 600px;
  margin: 0 auto;
  padding: 0 30px;
}

.rs-newsletter__title {
  font-size: 2.2em;
  letter-spacing: -0.02em;
  color: var(--rs-charcoal);
  margin: 0 0 12px;
}

.rs-newsletter__text {
  color: var(--rs-gray-500);
  margin-bottom: 32px;
  font-size: 1.05em;
}

.rs-newsletter__form {
  display: flex;
  gap: 12px;
  max-width: 480px;
  margin: 0 auto;
}

@media only screen and (max-width: 600px) {
  .rs-newsletter__form {
    flex-direction: column;
  }
}

.rs-newsletter__form input[type="email"] {
  flex: 1;
  padding: 16px 20px;
  border: 1.5px solid var(--rs-gray-300);
  border-radius: var(--rs-radius-sm);
  font-size: 14px;
  transition: all 0.3s ease;
  background: #fff;
}

.rs-newsletter__form input[type="email"]:focus {
  border-color: var(--rs-rose);
  outline: none;
  box-shadow: 0 0 0 3px var(--rs-rose-light);
}

.rs-newsletter__form button {
  padding: 16px 32px;
  background: var(--rs-charcoal);
  color: #fff;
  border: none;
  border-radius: var(--rs-radius-sm);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.rs-newsletter__form button:hover {
  background: var(--rs-gray-900);
  transform: translateY(-1px);
}

/* ---------- Modern Footer ---------- */
.site-footer {
  background: var(--rs-cream) !important;
  padding-top: 80px;
  border-top: 1px solid var(--rs-gray-100);
}

.site-footer h4,
.site-footer .h4 {
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 600;
  margin-bottom: 24px;
}

.site-footer a {
  transition: color 0.2s ease;
}

.site-footer a:hover {
  color: var(--rs-rose-dark) !important;
}

/* ---------- Collection Page Modern ---------- */
.collection-hero {
  border-radius: 0 0 var(--rs-radius-xl) var(--rs-radius-xl);
  overflow: hidden;
  margin-bottom: 40px;
}

.collection-filter {
  border-radius: var(--rs-radius-md);
  padding: 20px;
  background: #fff;
  box-shadow: var(--rs-shadow-sm);
}

/* ---------- Promo Grid Modern ---------- */
.promo-grid__container {
  border-radius: var(--rs-radius-md);
  overflow: hidden;
}

.flex-grid--gutters .flex-grid--item {
  border-radius: var(--rs-radius-md);
  overflow: hidden;
}

.promo-grid__bg {
  transition: transform 0.7s var(--rs-transition);
}

.flex-grid--item:hover .promo-grid__bg {
  transform: scale(1.04);
}

/* ---------- Rich Text Section ---------- */
.index-section .rte .enlarge-text,
.index-section .rte .enlarge-text p {
  line-height: 1.7;
  color: var(--rs-gray-700);
}

/* ---------- Background Image Text Section ---------- */
.background-media-text {
  border-radius: var(--rs-radius-lg);
  overflow: hidden;
  box-shadow: var(--rs-shadow-md);
}

/* ---------- Logo List ---------- */
.logo-bar .logo-bar__item img {
  opacity: 0.5;
  transition: opacity 0.3s ease;
  filter: grayscale(100%);
}

.logo-bar .logo-bar__item:hover img {
  opacity: 1;
  filter: grayscale(0%);
}

/* ---------- Quick Shop Modal ---------- */
.modal__inner {
  border-radius: var(--rs-radius-lg);
  overflow: hidden;
  box-shadow: var(--rs-shadow-xl);
}

/* ---------- Cart Drawer Modern ---------- */
.drawer {
  box-shadow: var(--rs-shadow-xl);
}

.drawer__title {
  font-size: 1.4em;
  letter-spacing: -0.01em;
}

/* ---------- Scroll Animations ---------- */
@keyframes rsFadeUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes rsFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.rs-animate-in {
  animation: rsFadeUp 0.8s var(--rs-transition) forwards;
}

.rs-animate-fade {
  animation: rsFadeIn 0.6s ease forwards;
}

/* ---------- Modern Scrollbar ---------- */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--rs-gray-100);
}

::-webkit-scrollbar-thumb {
  background: var(--rs-gray-300);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--rs-gray-500);
}

/* ---------- Selection Color ---------- */
::selection {
  background: var(--rs-rose-light);
  color: var(--rs-charcoal);
}

/* ---------- Newsletter Popup Modern ---------- */
.popup-cta {
  border-radius: var(--rs-radius-lg);
  box-shadow: var(--rs-shadow-xl);
  overflow: hidden;
}

/* ---------- Product Page Modern ---------- */
.product-single__meta {
  padding: 40px 0;
}

.product-single__title {
  font-size: 2em;
  letter-spacing: -0.02em;
  line-height: 1.15;
}

.product-single__prices {
  font-size: 1.3em;
  font-weight: 600;
}

/* ---------- Smooth Page Transitions ---------- */
.transition-body {
  animation: rsFadeIn 0.4s ease;
}

/* ---------- Search Modern ---------- */
.site-header__search-container {
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

.site-header__search-input {
  font-size: 18px;
  border-radius: var(--rs-radius-sm);
}

.predictive-results {
  border-radius: 0 0 var(--rs-radius-md) var(--rs-radius-md);
  box-shadow: var(--rs-shadow-lg);
}
